@article{doi:10.1002/gdj3.52,
author = {Batalla, Meritxell and Ninyerola, Miquel and Catalan, Jordi},
title = {Digital long-term topoclimate surfaces of the Pyrenees mountain range for the period 1950–2012},
journal = {Geoscience Data Journal},
volume = {5},
