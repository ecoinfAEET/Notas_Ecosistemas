@article{doi:10.1002/ecy.1893,
author = {Bovendorp, Ricardo S. and Villar, Nacho and de Abreu-Junior, Edson F. and Bello, Carolina and Regolin, André L. and Percequillo, Alexandre R. and Galetti, Mauro},
title = {Atlantic small-mammal: a dataset of communities of rodents and marsupials of the Atlantic forests of South America},
journal = {Ecology},
volume = {98},
number = {8},
pages = {2226-2226},
keywords = {Atlantic forest, biodiversity dataset, biodiversity hotspot, communities, hyper-dominance, live traps, marsupial, rodent, small mammals, species richness, tropical forest},
